    <script>
        const openmenubtn = document.getElementById("side-menu-open");
        const menuclose = document.getElementById("side-menu-close-btn");
        const sidemenu = document.getElementById("side-menu");
        
        menuclose.classList.add("d-none");

        openmenubtn.addEventListener('click', function () {
            sidemenu.classList.add('open');
            menuclose.classList.remove("d-none");
            openmenubtn.classList.add("d-none");
        });
        
        menuclose.addEventListener('click', function () {
            sidemenu.classList.remove('open');
            menuclose.classList.add("d-none");
            openmenubtn.classList.remove("d-none");
        });
    </script>