<%-include("../userLoginPartials/header.ejs")%>
<div id="screen-size"></div>
<section class="one">
    <div class="container container-one">
        <div class="box col-8 col-md-6 col-lg-4">
            <div class="input-box">
                <header class="my-4 fs-4">Sign In</header>
                <form action="/" method="post">
                    <div class="input-field">
                        <input type="email" class="input" id="email" name="email" required>
                        <label for="email">Email</label>
                    </div>
                    <div class="input-field">
                        <input type="password" class="input" id="pass" name="password" required>
                        <label for="pass">Password</label>
                        <p class="text-center"><a class="text-center fp" href="">Forgot password</a></p>
                    </div>
                    <div class="input-field">
                        <p class="paragraph text-light small">To verify your email we will send you a OTP to your email.</p>
                    </div>
                    <div class="input-field">
                        <button type="submit" class="btn" id="submit">Verify email</button>
                    </div>
                </form>
                <div class="signin mb-2">
                    <span>New to LapShop ?,<a href="/register">Sign Up</a></span>
                    <% if(message){ %>
                        <div class="alert alert-dismissible fade show alert-<%=type%>" role="alert" id="myAlert" style="padding: 5px; font-size: 14px;">
                            <!-- <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button> -->
                            <strong>
                                <%= message %>
                            </strong>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<%-include("../userLoginPartials/footer.ejs")%>