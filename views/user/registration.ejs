<%-include("../userLoginPartials/header.ejs")%>
    <div id="screen-size"></div>

    <section class="one">
        <div class="container container-one">
            <div class="box col-8 col-md-6 col-lg-4">
                <div class="input-box">
                    <header class="my-4 fs-4">Sign Up</header>
                    <form action="/register" method="POST">
                        <div class="input-field">
                            <input type="text" class="input" id="fullname" name="fullname" required>
                            <label for="fullname">First and last name</label>
                        </div>
                        <div class="input-field">
                            <input type="email" class="input" id="email" name="email" required>
                            <label for="email">Email</label>
                        </div>
                        <div class="input-field">
                            <input type="text" class="input" id="phone" name="phone" required>
                            <label for="phone">Mobile number</label>
                        </div>
                        <div class="input-field">
                            <input type="password" class="input" id="pass" name="password" required>
                            <label for="pass">Password</label>
                        </div>
                        <div class="input-field">
                            <input type="   password" class="input" id="confirmpass" name="confirmpassword" required>
                            <label for="confirmpassword">Confirm password</label>
                        </div>
                        <div class="input-field">
                            <p class="paragraph text-light">To verify your email we will send you a OTP to your email.
                            </p>
                        </div>
                        <div class="input-field">
                            <button type="submit" class="btn"
                                style="background-color: #50c878; color: rgb(0, 0, 0); font-size: 15px; font-weight: 600;">Verify
                                email</button>
                        </div>
                    </form>
                    <div class="signin mb-2">
                        <span>Already have an account, <a href="/register">Sign in</a></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%-include("../userLoginPartials/footer.ejs")%>