        <script>
             function startTimer(duration, display, link) {
        var timer = duration, minutes, seconds;
        link.style.display = "none"; // Hide the resend OTP link when timer starts
        display.style.display = "block"; // Show the timer display
        var interval = setInterval(function () {
            minutes = parseInt(timer / 60, 10);
            seconds = parseInt(timer % 60, 10);

            minutes = minutes < 10 ? "0" + minutes : minutes;
            seconds = seconds < 10 ? "0" + seconds : seconds;

            display.textContent = minutes + ":" + seconds;

            if (--timer < 0) {
                clearInterval(interval); // Stop the timer
                display.style.display = "none"; // Hide the timer display when timer stops
                link.style.display = "inline"; // Show the resend OTP link when timer stops
            }
        }, 1000);
    }

    // Start timer when page loads
    window.onload = function () {
        var oneMinute = 60,
            display = document.getElementById('timerDisplay'),
            link = document.getElementById('resendOtp');
        startTimer(oneMinute, display, link);
    };
        </script>
