    <head>
        <style>
            /*======> Very small devices <======*/
            @media (max-width: 576px) {
                .product-text span {
                    font-size: 12px;
                }

                .add-to-cart-btn {
                    width: 5rem;
                    font-size: 12px;
                }

                .delete-btn {
                    font-size: 12px;
                }
            }

            /*======> XS/SM devices <======*/
            @media (min-width: 576px) and (max-width: 767px) {
                .product-text span {
                    font-size: 14px;
                }
            }

            /*======> MD devices <======*/
            @media (min-width: 768px) and (max-width: 991px) {
                .product-img {
                    width: 90%;
                }
            }

            /*======> LG devices <======*/
            @media (min-width: 992px) and (max-width: 1199px) {
                .product-img {
                    width: 60%;
                }
            }


            /*======> XL devices <======*/
            @media (min-width: 1200px) {
                .product-img {
                    width: 50%;
                }
            }

            .font-semibold{
                font-weight: 600;
            }
        </style>
    </head>
    <section class="view">
        <!-- Table wishlist for mediuam and above screen start -->
        <div class="cart-wrap d-none d-md-block mt-5">
            <div class="container">
                <div class="row">
                    <div class="d-flex justify-content-between">
                        <h3>Your orders</h3>
                        <button class="btn btn-warning btn-sm" onclick="gotoCart(event)">Go to cart</button>
                    </div>
                    <hr class="mt-3">
                    <% if(order && order.length > 0){ %>
                    <table class="table mt-4 shadow">
                        <thead>
                            <tr>
                                <th class="col-2">Order id</th>
                                <th class="col-2">Product</th>
                                <th class="col-2">Details</th>
                                <th class="col-2">Order status</th>
                                <th class="col-3">Dates</th>
                                <th class="col-2">Cancel</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < order.length; i++){ %>
                                <% for(let j = 0; j < order[i].orderedItems.length; j++){ %>
                                    <tr>
                                        <td class="col-2" >
                                            <span class="product-price"><%= order[i]._id  %></span>
                                        </td>
                                        <td class="col-2">
                                            <a href="/productDetail/" style="cursor: pointer;">
                                                <img src="/static/images/ProductImages/<%= order[i].orderedItems[j].product.images[0] %>"
                                                    alt="" class=" product-img">
                                            </a>
                                        </td>
                                        <td class="col-2">
                                            <p class="mt-3">
                                                <span class="product-brand"><%= order[i].orderedItems[j].product.brand.name %></span>
                                                <br>
                                                <span class="product-name"><%= order[i].orderedItems[j].product.name %>, <%= order[i].orderedItems[j].product.category.name %>, <%= order[i].orderedItems[j].product.colour %></span>
                                                <br>
                                                <span class="product-quantity">Quantity : <%= order[i].orderedItems[j].quantity %></span>
                                                <br>
                                                <span class="product-price">Product total : ₹ <span class="text-success"><%= order[i].orderedItems[j].totalPrice %></span></span>
                                            </p>
                                        </td>
                                        <td class="col-2">
                                        </td>
                                        <td class="col-2" >
                                            <span class="product-price">Order total : ₹ <span class="text-success"><%= order[i].orderTotal %></span></span>
                                        </td>
                                        <td class="col-2">
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                    <% }else{ %>
                    <div class="alert alert-info text-center mt-4" role="alert">No order yet.</div>
                    <% } %>
                </div>
            </div>
        </div>
        <!-- Table wishlist for mediuam and above screen start -->

        

     

        <!-- Table for the small screens end -->
    </section>

