    <head>
        <style>
            /*======> Very small devices <======*/
            @media (max-width: 576px) {
                .product-text span {
                    font-size: 12px;
                }

                .add-to-cart-btn {
                    width: 5rem;
                    font-size: 12px;
                }

                .delete-btn {
                    font-size: 12px;
                }
            }

            /*======> XS/SM devices <======*/
            @media (min-width: 576px) and (max-width: 767px) {
                .product-text span {
                    font-size: 14px;
                }
            }

            /*======> MD devices <======*/
            @media (min-width: 768px) and (max-width: 991px) {
                .product-img {
                    width: 90%;
                }
            }

            /*======> LG devices <======*/
            @media (min-width: 992px) and (max-width: 1199px) {
                .product-img {
                    width: 60%;
                }
            }


            /*======> XL devices <======*/
            @media (min-width: 1200px) {
                .product-img {
                    width: 50%;
                }
            }

            .font-semibold{
                font-weight: 600;
            }

            .heads{
                font-weight: 600;
            }
        </style>
    </head>
    <section class="view">
        <!-- Table wishlist for mediuam and above screen start -->
        <div class="cart-wrap d-none d-md-block mt-5">
            <div class="container">
                <div class="row">
                    <div class="">
                        <h3>Your orders</h3>
                    </div>
                    <hr class="mt-3">
                    <% if(Array.isArray(order) && order.length > 0){ %>
                    <table class="table mt-4 shadow">
                        <thead>
                            <tr>
                                <th class="col-2">Order id</th>
                                <th class="col-2">Product</th>
                                <th class="col-2">Details</th>
                                <th class="col-2">Order status</th>
                                <th class="col-3">Order total</th>
                                <th class="col-2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < order.length; i++){ %>
                                <tr>
                                    <td class="col-2">
                                        <p class="mt-3">
                                            <span class="product-price "><%= order[i]._id.toString().slice(-6)  %></span>
                                            </p>
                                        </td>
                                        <td class="col-2">
                                            <% for(let j = 0; j < order[i].orderedItems.length; j++){ %>
                                                <a href="/productDetail/" style="cursor: pointer;">
                                                    <img src="/static/images/ProductImages/<%= order[i].orderedItems[j].product.images[0] %>"
                                                        alt="" class="product-img">
                                                </a>
                                            <% } %>
                                        </td>
                                        <td class="col-2">
                                            <p class="mt-3">
                                                <% for(let j = 0; j < order[i].orderedItems.length; j++){ %>
                                                    <span class="product-brand"><%= order[i].orderedItems[j].product.brand.name %>, </span>
                                                    <span class="product-name"><%= order[i].orderedItems[j].product.name %>, <%= order[i].orderedItems[j].product.category.name %></span> <br>
                                                <% } %>
                                            </p>
                                        </td>
                                        <td class="col-2">
                                            <p class="mt-3">
                                                <% if(order[i].status === "Cancelled"){ %>
                                                    <span class="product-price text-danger"><%= order[i].status %></span>
                                                <% }else{ %>
                                                    <span class="product-price"><%= order[i].status %></span>
                                                <% } %>
                                            </p>
                                        </td>
                                        <td class="col-2">
                                            <p class="mt-3">
                                            <span class="product-price">Order total : ₹ <span class="text-success"><%= order[i].orderTotal %></span></span>
                                                <% if(order[i].paymentStatus === false && order[i].status !== "Cancelled" ){ %>
                                                <br>
                                                <button class="btn btn-warning btn-sm" id="repayment">Complete payment</button>
                                                <% } %>
                                            </p>
                                        </td>
                                        <td class="col-2 buttons d-flex flex-column justify-content-center align-items-center">
                                            <button class="btn btn-primary btn-sm mt-3" id="prod-detail" onclick="goToOrderDetail(this)" data-orderId="<%= order[i]._id %>">Details</button>
                                            <% if(order[i].status === "Delivered"){ %>
                                                <button class="btn btn-danger btn-sm mt-2" id="prod-cancel" onclick="returnOrder(this)" data-orderId="<%= order[i]._id %>">Return</button>
                                            <% }else if(order[i].status === "Processing" || order[i].status === "Shipped"){ %>
                                                <button class="btn btn-danger btn-sm mt-2" id="prod-cancel" onclick="cancelOrder(this)" data-orderId="<%= order[i]._id %>">Cancel</button>
                                            <% } %>
                                        </td>
                                    </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <% }else{ %>
                    <div class="alert alert-info text-center mt-4" role="alert">No order yet.</div>
                    <% } %>
                </div>
            </div>
        </div>
        <!-- Table wishlist for mediuam and above screen start -->

        <!-- Table for the small screens start -->
        <div class="product mt-5 d-block d-md-none">
            <div class="container">
                <div class="row">
                    <div class="">
                        <h3>Your orders</h3>
                    </div>
                </div>
                <% if(order && order.length > 0){ %>
                    <% for(let i = 0; i < order.length; i++){ %>
                        <div class="mt-4 mb-3 d-flex align-items-center justify-content-around p-3 bg-light shadow">   
                            <div class="image col-3">
                                <% for(let j = 0; j < order[i].orderedItems.length; j++){ %>
                                <a href="/productDetail/" style="cursor: pointer;">
                                    <img src="/static/images/ProductImages/<%= order[i].orderedItems[j].product.images[0] %>" alt="" class="img-fluid">
                                </a>
                                <% } %>
                                <span class="product-price ">Order id : <%= order[i]._id.toString().slice(-6)  %></span><br>
                            </div>
                            <div class="product-detials col-7 d-flex flex-column align-items-center">
                                <div class="product-text">
                                    <p class="sm-p">
                                <% for(let j = 0; j < order[i].orderedItems.length; j++){ %>
                                <span class="heads">Item : <%= j+1 %></span><br>
                                <span class="product-brand"><%= order[i].orderedItems[j].product.brand.name %>, </span>
                                <span class="product-name"><%= order[i].orderedItems[j].product.name %>, <%= order[i].orderedItems[j].product.category.name %></span><br>
                                <% } %>
                                <span class="heads">Order status : </span>
                                <% if(order[i].status === "Cancelled"){ %>
                                    <span class="product-price text-danger"><%= order[i].status %></span>
                                <% }else{ %>
                                    <span class="product-price"><%= order[i].status %></span>
                                <% } %>
                                <br>
                                <span class="product-price heads">Order total : ₹ <span class="text-success"><%= order[i].orderTotal %></span></span>
                            </p>
                            <% if(order[i].paymentStatus === false && order[i].status !== "Cancelled" ){ %>
                                <button class="btn btn-warning btn-sm" id="repayment">Complete payment</button>
                            <% } %>
                            <button class="btn btn-primary btn-sm" id="prod-detail" onclick="goToOrderDetail(this)" data-orderId="<%= order[i]._id %>">Details</button>
                            <% if(order[i].status === "Delivered"){ %>
                                <button class="btn btn-danger btn-sm" id="prod-cancel" onclick="returnOrder(this)" data-orderId="<%= order[i]._id %>">Return</button>
                            <% }else if(order[i].status === "Processing" || order[i].status === "Shipped"){ %>
                                <button class="btn btn-danger btn-sm" id="prod-cancel" onclick="cancelOrder(this)" data-orderId="<%= order[i]._id %>">Cancel</button>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% } %>
                <% }else{ %>
                    <div class="alert alert-info text-center mt-4" role="alert">No order yet.</div>
                    <% } %>
                </div>
            </div>
        </div>
        <!-- Table for the small screens end -->
    </section>

    <!--  Script for sweet alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>

        ////// To got orderDetail page \\\\\\
        function goToOrderDetail(button) {
            const orderId = button.getAttribute('data-orderId');
            console.log("orderId :", orderId);
            window.location.href = `/orderDetail/${orderId}`;
        }

        ////// To cancel a order \\\\\\
        function cancelOrder(button){
            const orderId = button.getAttribute("data-orderId")
            console.log("orderId :",orderId)

            Swal.fire({
                title: 'Are you sure want to cancel this order?',
                text: 'This cancel cannot be undone!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, cancel it!',
                cancelButtonText: 'No, keep it'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/cancelOrder', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ orderId })
                    })
                    .then(response => {
                        const contentType = response.headers.get('content-type');
                        const message = "Your account is blocked, Please contact us";
                        const type = "danger";
                        if (contentType && contentType.includes('application/json')) {
                            return response.json(); 
                        } else {
                            window.location.href = `/login?message=${encodeURIComponent(message)}&type=${type}`;
                        }
                    })
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: data.message
                            }).then(()=>{
                                location.reload()
                            })
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: data.message
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: 'An error occurred. Please try again later.'
                        });
                    });
                }
            });
        }
    </script>

