  <section class="view mt-4 wrapper">

    <% if(homeCarousel !="" ){ %>
      <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% homeCarousel.forEach((hc, index)=> { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
              <img src="/static/images/HomeCarousels/<%= hc.image %>" class="d-block w-100 homeCarousel-img">
              <div class="carousel-caption">
                <div class="tagline">
                  <h4>
                    <%= hc.tagline %>
                  </h4>
                </div>
                <div>
                  <button class="btn d-none d-lg-block" id="shop-btn">Shop</button>
                </div>
                <div class="desc-btn">
                  <div class="desc d-none d-md-block">
                    <h6>
                      <%= hc.desc %>
                    </h6>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    <% } %>
    
    

    <% if (category.length > 0) { %>
      <div class="caba">
        <% if(category){ %>
          <section class="parallax-one p-3">
            <div class="container">
              <div class="row p-3">
                <% category.forEach((cat,index)=>{ %>
                  <div class="col-md-6 col-lg-3">
                    <div class="card m-3 border-0 shadow">
                      <div class="card-body d-flex flex-column justify-content-center"
                        style="background-image: url('/static/images/CategoryImages/<%= cat.image %>'); background-size: cover; background-position: center;">
                        <h3 class="card-title text-light text-center position-absolute top-50 start-50 translate-middle">
                          <%= cat.name %>
                        </h3>
                        <h6 class="card-text text-light text-center">
                          <%= cat.desc %>
                        </h6>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
          </section>
        <% } %>
      </div>
    <% } %>

    <div class="bsac">
      <% if(bestSellingProducts !="" ){ %>
        <section class="py-2 py-md-5 container" id="sectiontwo">
          <h2 class="text-center fw-bold fs-2">Best selling products</h2>
          <div class="col-12">
            <div class="scroll-container">
              <div class="d-flex overflow-auto p-3">
                <% bestSellingProducts.forEach((product , index)=>{ %>
                  <a href="/productDetail/<%= product._id %>" class="product-outline">
                    <div class="box-two mx-2 border-0 small-card p-2" style="flex: 0 0 auto;background-color: rgb(243, 243, 243);">
                      <div class="img">
                          <img src="<%= product.imagePath %>"
                              alt="product-image">
                        </div>
                        <div class="p-2">
                          <h5 class="box-name text-dark"><%= product.name %></h5>
                          <div class="box-price d-flex justify-content-between">
                            <span class="text-danger">Min <%= product.discount %> off</span>
                            <span class="mx-2 text-success fw-bold"> â‚¹<%= product.realPrice %></span>
                          </div>
                        </div>
                      </div>
                    </a>
                <% }) %>
              </div>
            </div>
          </div>
        </section>
      <% } %>

      <% if(coupon && coupon.length> 0){ %>
        <section class="coupon-section">
          <div class="container">
            <% if(coupon.length > 1){ %>
              <h2 class="text-center fw-bold fs-2">Available Coupons</h2>
            <% }else{ %>
              <h2 class="text-center fw-bold fs-2">Available Coupon</h2>
            <% } %>
            <div class="coupon-container">
              <% for(let i=0; i < coupon.length; i++ ){ %>
                <div class="coupon">
                  <div class="coupon-title fw-bold fs-4 fs-md-2">
                    <%= coupon[i].couponName %>
                  </div>
                  <% if(coupon[i].couponAmount <=100){ %>
                    <div class="coupon-description">
                      Get <%= coupon[i].couponAmount %>% off on your purchase.
                    </div>
                  <% }else{ %>
                    <div class="coupon-description">
                      Get Rs. <%= coupon[i].couponAmount %> off on your purchase.
                    </div>
                  <% } %>
                  <div class="coupon-code">
                    <input type="text" value="<%= coupon[i].couponCode %>" class="text-center coupon-button" readonly>
                    <button class="couponcode" onclick="copyCode('coupon1')">Copy</button>
                  </div>
                  <div class="coupon-description">
                    Minimum purchase amount Rs.<%= coupon[i].minAmount %>
                  </div>
                  <div class="coupon-expiry">Expires on: <%=
                    coupon[i].endDate.toLocaleDateString(undefined, { weekday: 'short' ,
                    year: 'numeric' , month: 'short' , day: 'numeric' }) %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </section>
      <% } %>
    </div>

    <% if(brands !="" ){ %>
      <section class="py-5 container" id="sectiontwo">
        <h2 class="text-center fw-bold fs-2">Our trusted brands</h2>
          <div class="d-flex flex-wrap align-items-center justify-content-center col-12">
            <% brands.forEach((brand , index)=>{ %>
              <div class="image col-3 col-md-2 d-flex align-items-center justify-content-center">
                <img src="/static/images/BrandImages/<%= brand.image %>" alt="No-image" class="img-fluid w-75 w-md-50">
              </div>
            <% }) %>
          </div>
      </section>
    <% } %>

