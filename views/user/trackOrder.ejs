<head>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .order-tracker-container {
      background-color: #f9f9f9;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .order-details {
      background-color: #ffffff;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .step {
      display: flex;
      align-items: center;
      position: relative;
      padding-left: 50px;
      margin-bottom: 20px;
    }

    .step-icon {
      width: 30px;
      height: 30px;
      background-color: #ddd;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-right: 15px;
      font-size: 18px;
      color: #fff;
    }

    .step.completed .step-icon {
      background-color: #4caf50;
    }

    .step.active .step-icon {
      background-color: #ff9800; 
    }

    .step.cancelled .step-icon {
      background-color: #f44336;
    }

    .step.request-return .step-icon {
      background-color: #2196f3;
    }

    .step.return-accepted .step-icon {
      background-color: #4caf50; 
    }

    .step.return-rejected .step-icon {
      background-color: #f44336; 
    }

    .step-label {
      font-weight: bold;
      margin-bottom: 5px;
    }

    .step-note {
      font-size: 1rem;
      color: #178b2e;
    }

    @media (max-width: 768px) {

      .order-tracker-container,
      .order-details {
        margin-bottom: 20px;
      }
    }
  </style>
</head>

<section class="view">
  <div class="container mt-5">
    <div class="mb-4">
      <h3 class="font-weight-bold">Track Your Order</h3>
    </div>
    <hr />
    <div class="row">
      <div class="col-lg-6 mb-4">
        <div class="order-tracker-container">
          <h4 class="mb-2">Order Progress</h4>
          <hr>
          <% order.trackArray.forEach((step, index) => { %>
          <div
            class="step <%= step.status === 'Cancelled' ? 'cancelled' : 
                            step.status === 'Request Return' ? 'request-return' :
                            step.status === 'Return Accepted' ? 'return-accepted' :
                            step.status === 'Return Rejected' ? 'return-rejected' :
                            (index === order.trackArray.length - 1 ? 'active' : 'completed') %>"
          >
            <div class="step-icon">
              <% if (step.status === 'Processing') { %> üîÑ <% } else if
              (step.status === 'Shipped') { %> üöö <% } else if
              (step.status === 'Delivered') { %> üì¶ <% } else if
              (step.status === 'Cancelled') { %> ‚õî <% } else if
              (step.status === 'Admin Cancelled') { %> ‚ùå <% } else if
              (step.status === 'Request Return') { %> üì§ <% } else if
              (step.status === 'Return Accepted') { %> ‚úÖ <% } else if
              (step.status === 'Return Rejected') { %> ‚ùå <% } %>
            </div>
            <div>
              <div class="d-flex">
                <span class="step-label text-sm"><%= step.status %></span>
                <span class="step-date mx-3 text-sm"><%= new Date(step.updatedAt).toLocaleDateString() %></span>
              </div>
              <span class="step-note text-sm"><%= step.note %></span>
              <% if (step.note) { %>
              <% } %>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="order-details">
          <h4 class="mb-2">Order Details</h4>
          <hr />
          <p>
            <strong>Order ID:</strong> <span class="text-primary"><%= order.orderId %></span>
          </p>
          <p>
            <strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleDateString() %>
          </p>
          <p>
            <strong>Total Amount:</strong> ‚Çπ<%= order.orderTotal.toLocaleString() %>
          </p>
          <p>
            <strong>Payment Method:</strong> <%= order.paymentMethod %>
          </p>
          <p>
            <strong>Status:</strong> <span class="text-danger"><%= order.status %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

