<!-- User navbar -->
<%-include("../userpartials/navbar.ejs")%>

    <head>
        <!-- Css for the cart page -->
        <link rel="stylesheet" href='/static/css/cart.css' type="text/css">
    </head>
    <section class="view">
        <div class="cart-wrap mt-5">
            <div class="container">
                <div class="row mb-3">

                    <% if(cartItems && cartItems.length !==0){ %>
                        <div class="product-card col-md-8 shadow mt-4 p-3">
                            <div class="cart-intro mb-4 d-flex justify-content-between align-items-center">
                                <h4 class="fw-bold mb-0">Your Shopping Cart</h4>
                                <a href="#" data-bs-toggle="tooltip" data-bs-placement="left" title="Review the products you've added to your cart. You can increase or decrease the quantity of each item, or remove items you no longer want. When you're ready, proceed to checkout to complete your purchase.">
                                    <i class="fas fa-question-circle text-muted"></i>
                                </a>
                            </div>          
                            <hr>                                
                            <% cartItems.forEach((product,index)=>{ %>
                                <div class="product-card-each d-flex">
                                    <div class="col-4 d-flex align-items-center justify-content-center">
                                        <a href="/productDetail/" style="cursor: pointer;">
                                            <img src="/static/images/ProductImages/<%=  product.product.images[0] %>" alt="" class="product-img">
                                        </a>
                                    </div>
                                    <div class="col-8 mx-2 p-3">
                                        <p class="mt-2">
                                            <span class="product-brand">
                                                <%= product.product.brand.name %>
                                            </span>
                                            <br>
                                            <span class="product-name">
                                                <%= product.product.name %>
                                            </span>
                                            <br>
                                            <span class="product-desc">
                                                <%= product.product.description %>
                                            </span>
                                            <br>
                                            <span class="product-offerPrice text-success">
                                                ₹ <%= product.price %>
                                            </span>
                                            <br>
                                            <% if(product.product.noOfStock < 5){ %>
                                                <span class="product-stock text-danger">Only few left!</span>
                                            <% }else{ %>
                                                <span class="product-stock">In stock</span>
                                            <% } %>
                                            <br>
                                            <span class="item-added-date">Item added to your cart on <span class="item-added-date"></span><%= product.addedAt.toDateString() %></span></span> 
                                        </p>
                                        <div class="buttons mb-3 d-flex">
                                            <div class="quantity-input">
                                                <button class="quantity-btn"
                                                    data-product-id="<%= product.product._id %>"
                                                    onclick="decreaseQuantity(this)">-</button>
                                                <input type="text" class="quantity-value"
                                                    value="<%= product.quantity %>" readonly>
                                                <button class="quantity-btn"
                                                    data-product-id="<%= product.product._id %>"
                                                    onclick="increaseQuantity(this)">+</button>
                                            </div>
                                            <button class="btn btn-danger btn-sm mx-2"
                                                data-product-id="<%= product.product._id %>"
                                                onclick="deleteProduct(this)">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                            <% }) %>
                        </div>

                        <% if(cart && cart.length !==0 ){ %>
                            <div class="product-subtotal col-12 col-md-4">
                                <div class="subtotal mt-4 shadow d-flex flex-column p-3">
                                    <div class="head text-center">
                                      <div class="head text-center">
                                        <h4 class="">Order summary</h4>
                                        <p class="text-success">
                                          Part of our website lauching all deliveries are free now.
                                        </p>
                                      </div>
                                    </div>
                                    <div class="details">
                                      <hr>
                                      <h6>Count of items : <span><%= cart[0].items.length %></span></h6>            
                                      <h6>You will save in this purchace : <span class="purchace-discount"> ₹ <%= cart[0].totalCartDiscountPrice.toFixed(2) %></span></h6>    
                                      <hr>       
                                      <h5>Subtotal : <span class="subtotal"> ₹ <%= cart[0].totalCartPrice %></span></h5>   
                                      <hr>
                                    </div>
                                    <div class="button mt-3">
                                        <button onclick="goToCheckout(event)" class="btn btn-warning w-100 d-none d-md-block">Proceed to Checkout</button>
                                        <button onclick="goToCheckout(event)" class="btn btn-warning w-100 btn-sm d-block d-md-none">Proceed to Checkout</button>
                                    </div>
                                </div>
                            </div>
                        <% } %>

                        <div class="instruction-faq col-md-8 col-12 shadow mt-4 p-3">
                            <div class="instructions">
                                <h3>Cart Review Instructions:</h3>
                                <p>"Review the products in your cart to ensure you have everything you need."</p>
                                <p>"Check the quantity of each item and make any necessary adjustments."</p>
                                <hr>
                                <h3>Quantity Adjustment Instructions:</h3>
                                <p>"Increase or decrease the quantity of any product in your cart."</p>
                                <p>"Ensure that the quantity reflects what you want to purchase."</p>
                                <hr>
                                <h3>Item Removal Instructions:</h3>
                                <p>"If you no longer wish to purchase a product, remove it from your cart."</p>
                                <p>"Click the delete icon next to the item to remove it."</p>
                            </div>
                            <div class="accordion" id="cartFaqAccordion">
                                <h4 class="mx-3">FAQ's</h4>
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="faq1">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="false" aria-controls="collapse1">
                                      How do I review the products in my cart?
                                    </button>
                                  </h2>
                                  <div id="collapse1" class="accordion-collapse collapse" aria-labelledby="faq1" data-bs-parent="#cartFaqAccordion">
                                    <div class="accordion-body">
                                      You can see all the products you've added to your cart on this page. Review the list to ensure you have selected everything you want to purchase.
                                    </div>
                                  </div>
                                </div>
                                
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="faq2">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                                      Can I change the quantity of items in my cart?
                                    </button>
                                  </h2>
                                  <div id="collapse2" class="accordion-collapse collapse" aria-labelledby="faq2" data-bs-parent="#cartFaqAccordion">
                                    <div class="accordion-body">
                                      Yes, you can adjust the quantity of any item by using the "+" and "-" buttons next to the product in your cart.
                                    </div>
                                  </div>
                                </div>
                                
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="faq3">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
                                      What if I accidentally add the wrong product?
                                    </button>
                                  </h2>
                                  <div id="collapse3" class="accordion-collapse collapse" aria-labelledby="faq3" data-bs-parent="#cartFaqAccordion">
                                    <div class="accordion-body">
                                      No worries! Simply click the delete icon next to the product to remove it from your cart.
                                    </div>
                                  </div>
                                </div>
                                
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="faq4">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse4" aria-expanded="false" aria-controls="collapse4">
                                      How do I remove an item from my cart?
                                    </button>
                                  </h2>
                                  <div id="collapse4" class="accordion-collapse collapse" aria-labelledby="faq4" data-bs-parent="#cartFaqAccordion">
                                    <div class="accordion-body">
                                      To remove an item, click on the delete icon next to the product. This will remove the item from your cart immediately.
                                    </div>
                                  </div>
                                </div>
                                
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="faq6">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse6" aria-expanded="false" aria-controls="collapse6">
                                      What if I want to add more items after reviewing my cart?
                                    </button>
                                  </h2>
                                  <div id="collapse6" class="accordion-collapse collapse" aria-labelledby="faq6" data-bs-parent="#cartFaqAccordion">
                                    <div class="accordion-body">
                                      You can continue shopping and add more items to your cart. Your current selections will remain in the cart until you're ready to checkout.
                                    </div>
                                  </div>
                                </div>
                                
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="faq8">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse8" aria-expanded="false" aria-controls="collapse8">
                                      How do I proceed to checkout?
                                    </button>
                                  </h2>
                                  <div id="collapse8" class="accordion-collapse collapse" aria-labelledby="faq8" data-bs-parent="#cartFaqAccordion">
                                    <div class="accordion-body">
                                      Once you're satisfied with your cart, click the "Proceed to Checkout" button to begin the checkout process.
                                    </div>
                                  </div>
                                </div>
                                
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="faq9">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse9" aria-expanded="false" aria-controls="collapse9">
                                      Can I apply a discount code to my cart?
                                    </button>
                                  </h2>
                                  <div id="collapse9" class="accordion-collapse collapse" aria-labelledby="faq9" data-bs-parent="#cartFaqAccordion">
                                    <div class="accordion-body">
                                      You can usually apply a discount code during the payment process. Look for the coupons in the home page.
                                    </div>
                                  </div>
                                </div>
                                
                                <div class="accordion-item">
                                  <h2 class="accordion-header" id="faq10">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse10" aria-expanded="false" aria-controls="collapse10">
                                      What if I encounter an issue with my cart?
                                    </button>
                                  </h2>
                                  <div id="collapse10" class="accordion-collapse collapse" aria-labelledby="faq10" data-bs-parent="#cartFaqAccordion">
                                    <div class="accordion-body">
                                      If you experience any problems with your cart, try refreshing the page or clearing your browser's cache. If the issue persists, contact customer support for assistance.
                                    </div>
                                  </div>
                                </div>
                              </div>
                              
                        </div>

                    <% }else{ %>
                        <div class="alert alert-info text-center mt-4" role="alert">Your Cart is empty.</div>
                    <% } %>

                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>

        ////// For the tooltip \\\\\\
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        ////// Function to delete a product from cart \\\\\\
        function deleteProduct(delbtn) {
            const productId = delbtn.getAttribute("data-product-id");

            fetch('/deleteProductFromcart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId })
            })
                .then(response => {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        return response.json();
                    } else {
                        window.location.href = `/login`;
                    }
                })
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            title: "Success",
                            text: data.message,
                            icon: "success",
                            timer: 2000,
                            timerProgressBar: true,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload();
                        })
                    } else {
                        Swal.fire({
                            title: "Error",
                            text: data.message,
                            icon: "error",
                            timer: 2000,
                            timerProgressBar: true,
                            showConfirmButton: false
                        });
                    }
                })
                .catch(error => {
                    Swal.fire({
                        title: "Error",
                        text: "Internal server error.",
                        icon: "error",
                        timer: 2000,
                        timerProgressBar: true,
                        showConfirmButton: false
                    });
                });
        }

        ////// Function for the product quantity increment \\\\\\
        function increaseQuantity(element) {
            var input = element.parentElement.querySelector('.quantity-value');
            var value = parseInt(input.value);
            input.value = value + 1;

            const productId = element.getAttribute("data-product-id");

            fetch('/incrementCartProduct', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId })
            })
                .then(response => {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        return response.json();
                    } else {
                        window.location.href = `/login`;
                    }
                })
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            title: "Success",
                            text: data.message,
                            icon: "success",
                            timer: 2000,
                            timerProgressBar: true,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload();
                        })
                    } else if (data.status === 409) {
                        Swal.fire({
                            title: "Info",
                            text: data.message,
                            icon: "info",
                            timer: 2000,
                            timerProgressBar: true,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload();
                        })
                    } else {
                        Swal.fire({
                            title: "Error",
                            text: data.message,
                            icon: "error",
                            timer: 2000,
                            timerProgressBar: true,
                            showConfirmButton: false
                        });
                    }
                })
                .catch(error => {
                    Swal.fire({
                        title: "Error",
                        text: "Internal server error.",
                        icon: "error",
                        timer: 2000,
                        timerProgressBar: true,
                        showConfirmButton: false
                    });
                });
        }

        ////// Function for the product quantity decrement \\\\\\
        function decreaseQuantity(element) {
            var input = element.parentElement.querySelector('.quantity-value');
            var value = parseInt(input.value);

            if (value === 1) {
                Swal.fire({
                    title: "Info",
                    text: "Please keep minimun quantity.",
                    icon: "info",
                    timer: 2000,
                    timerProgressBar: true,
                    showConfirmButton: false
                })
                return false
            }

            input.value = value - 1;

            const productId = element.getAttribute("data-product-id");

            fetch('/decrementCartProduct', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId })
            })
                .then(response => {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        return response.json();
                    } else {
                        window.location.href = `/login`;
                    }
                })
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            title: "Success",
                            text: data.message,
                            icon: "success",
                            timer: 2000,
                            timerProgressBar: true,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload();
                        })
                    } else {
                        Swal.fire({
                            title: "Error",
                            text: data.message,
                            icon: "error",
                            timer: 2000,
                            timerProgressBar: true,
                            showConfirmButton: false
                        });
                    }
                })
                .catch(error => {
                    Swal.fire({
                        title: "Error",
                        text: "Internal server error.",
                        icon: "error",
                        timer: 2000,
                        timerProgressBar: true,
                        showConfirmButton: false
                    });
                });
        }

        ////// Function to go to checkout \\\\\\
        function goToCheckout(event) {
            event.preventDefault()
            window.location.href = "/checkout"
        }

    </script>

    <!-- User footer -->
    <%-include("../userpartials/footer.ejs")%>