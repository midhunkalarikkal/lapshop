          return response.json();
        } else {
          window.location.href = `/login`;
        }
      })
      .then(data => {
        if (data.success) {
          Swal.fire({
            title: "Success",
            text: data.message,
            icon: "success",
            timer: 2000,
            timerProgressBar: true,
            showConfirmButton: false
