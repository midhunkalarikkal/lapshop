                                    <tr>
                                        <td class="table-left-bg font-weight-bold px-3 py-2" style="width: 30%; background-color: rgb(204, 204, 204);">Voltage</td>
                                        <td class="px-3 py-2"><%= productData.voltage %></td>
                                    </tr>
                                <% } %>
                                <% if(productData.wattage !== ""){ %>
                                    <tr>
                                        <td class="table-left-bg font-weight-bold px-3 py-2" style="width: 30%; background-color: rgb(204, 204, 204);">Wattage</td>
                                        <td class="px-3 py-2"><%= productData.wattage %> watts</td>
                                    </tr>
                                <% } %>
                                <tr>
                                    <td class="table-left-bg font-weight-bold px-3 py-2" style="width: 30%; background-color: rgb(204, 204, 204);">Weight</td>
                                    <td class="px-3 py-2"><%= productData.weight %></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Details div -->
                <div class="divFour col-6 shadow px-4"  id="second" style="height: 450px">
                    
                </div>
                <div class="col-md-4">                    
                    <div class="divFive col-12 d-flex flex-column mt-4 mt-md-0 px-md-4" id="product-detail">
