        <script>

            ////// To get the cart page \\\\\\
            function toGetCart(){
                window.location.href = "/cart";
            }

            ////// To get the wishlist page \\\\\\
            function getWishlist(){
                window.location.href = "/wishlist";
            }

            ////// Funciton to add product to cart \\\\\\
            function addToCart(element) {
                const productId = element.getAttribute('data-prod-id');

                fetch('/addProductToCartFromShop', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId: productId })
                })
                .then(response => {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        return response.json(); 
                    } else {
                        window.location.href = `/login`;
                    }
                })
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            title: "Success",
                            text: data.message,
                            icon: "success",
                            timer: 2000,
                            background: "#333",
                            color: "#ffffff",
                            timerProgressBar: true,
                            showConfirmButton: false
                        }).then(data =>{
                            location.reload()
                        })
                    } else if (data.status === 409) {
                        Swal.fire({
                            title: "Info",
                            text: data.message,
                            icon: "info",
                            timer: 2000,
                            background: "#333",
                            color: "#ffffff",
                            timerProgressBar: true,
                            showConfirmButton: false
                        })
                    } else {
                        Swal.fire({
                            title: "Error",
                            text: data.message,
                            icon: "error",
                            timer: 2000,
                            background: "#333",
                            color: "#ffffff",
                            timerProgressBar: true,
                            showConfirmButton: false
                        });
                    }
                })
            }

            ////// function to show the selected image \\\\\\
            function changeimage(element) {
                var selectedImage;
                var index = parseInt(element.getAttribute("data-index"));

                document.querySelectorAll('.carousel-item').forEach(item => {
                    item.classList.remove('active');
                });

                var carouselItem = document.getElementById(`carousel-item-${index}`);
                if (carouselItem) { 
                    var imgElement = carouselItem.querySelector('img');
                    selectedImage = imgElement.getAttribute('src');
                    carouselItem.classList.add('active');
                }
                customChange(selectedImage)
            }
            
            ////// for showing image in zoom div \\\\\\
            document.addEventListener('DOMContentLoaded', function() {
                var targetImage = document.querySelector("#target-image");
                
                var second = document.getElementById("second")
                if (targetImage) {
                    second.style.backgroundImage = `url(${targetImage.src})` 
                }
            });

            ////// Function to show the selected image in zoom div \\\\\\
            function customChange(selectedImage) {
                var targetImage = document.querySelector("#target-image");
                var second = document.getElementById("second")
                second.style.backgroundImage = ""
                
                if (selectedImage) {
                    second.style.backgroundImage = `url(${selectedImage})` 
                }
            }

            ////// function to handle the zoom functionality of th image \\\\\\
            var lens = document.querySelectorAll("#lens")
            var first = document.querySelectorAll(".first")
            var second = document.getElementById("second")
            var productDetail = document.getElementById("product-detail")
            var carouselButtonOne = document.getElementById("carousel-btnOne")
            var carouselButtonTwo = document.getElementById("carousel-btnTwo")
            
            for(let i = 0; i < first.length ; i++){
            
                first[i].addEventListener("mousemove",function(e){
                    
                    var x = e.clientX - e.target.getBoundingClientRect().left;
                    var y = e.clientY - e.target.getBoundingClientRect().top;
                    
                    var lensWidth = lens[i].offsetWidth;
                    var lensHeight = lens[i].offsetHeight;
                    var lensX = x - lensWidth / 2;
                    var lensY = y - lensHeight / 2.3;
                    
                    lens[i].style.left = lensX + "px";
                    lens[i].style.top = lensY + "px";
                    
                    var imageX = (x / e.target.offsetWidth) * 100;
                    var imageY = (y / e.target.offsetHeight) * 100;
                    
                    second.style.backgroundPosition = `${imageX}% ${imageY}%`;
                    
                    lens[i].style.cursor = "none";
                    document.body.style.cursor = "block";
                    
                })
                
                first[i].addEventListener("mouseenter", function() {
                    if(window.innerWidth > 991) {
                        carouselButtonOne.style.display = "none"
                        carouselButtonTwo.style.display = "none"
                        second.style.display = "block"
                        lens[i].style.display = "block";
                        productDetail.classList.add("d-none")
                    }
                });
                
                first[i].addEventListener("mouseleave", function() {
                    carouselButtonOne.style.display = "block"
                    carouselButtonTwo.style.display = "block"
                    second.style.display = "none"
                    lens[i].style.display = "none";
                    productDetail.classList.remove("d-none")
                });
            }

            ////// Add a review \\\\\\
            async function submitReview() {
                const productDelivered = document.getElementById('productDelivered').value;
                const productId = document.getElementById('reviewProductId').value;
                const reviewText = document.getElementById('reviewText').value;
                const rating = document.getElementById('rating').value;

                if(!productDelivered){
                    Swal.fire({
                        icon: 'info',
                        title: "Not purchased",
                        text: 'You can add a review only after purchasing this product.',
                        timer: 2000, 
                        timerProgressBar: true, 
                        showConfirmButton: false, 
                        background: '#333', 
                        color: '#ffffff', 
                    });
                    return;   
                }

                if(!reviewText || !rating){
                    Swal.fire({
                        icon: 'warning',
                        title: 'Review form',
                        text: 'Please check the review From.',
                        timer: 2000, 
                        timerProgressBar: true, 
                        showConfirmButton: false, 
                        background: '#333', 
                        color: '#ffffff', 
                    });
                    return;
                }

                if(reviewText.length > 200){
                    Swal.fire({
                        icon: 'warning',
                        title: 'Review form',
                        text: 'Review text length exceeds',
                        timer: 2000, 
                        timerProgressBar: true, 
                        showConfirmButton: false, 
                        background: '#333', 
                        color: '#ffffff', 
                    });
                    return;
                }

                try {
                    const response = await fetch(`/addProductReview/${productId}/review`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ rating, reviewText })
                    });

                    const contentType = response.headers.get('content-type');
                    let data;
                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                    } else {
                        window.location.href = `/login`;
                    }

                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success.',
                            text: data.message || 'Review added successfully...',
                            background: "#333",
                            color: "#ffffff",
                            showConfirmButton: true
                        }).then(() => {
                            location.reload();
                        })
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: data.message || 'Review adding error.',
                            timer: 3000,
                            background: "#333",
                            color: "#ffffff",
                            timerProgressBar: true,
                            showConfirmButton: false
                        });
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: data.message || 'Something went wrong.',
                        timer: 3000,
                        background: "#333",
                        color: "#ffffff",
                        timerProgressBar: true,
                        showConfirmButton: false
                    });
                }
            }

           ////// To like or dislike the review \\\\\\
           document.addEventListener('DOMContentLoaded', () => {
            const likeButtons = document.querySelectorAll('.btn-like');
            const dislikeButtons = document.querySelectorAll('.btn-dislike');

            const handleReviewAction = async (reviewId, action) => {
                try {
                const response = await fetch(`/review/${reviewId}/like-dislike`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action }),
                });

                const contentType = response.headers.get('content-type');
                let data;
                if (contentType && contentType.includes('application/json')) {
                    data = await response.json();
                    Swal.close();
                } else {
                    window.location.href = `/login`;
                }

                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: data.message,
                        timer: 2000,
                        timerProgressBar: true,
                        showConfirmButton: false,
                        background: '#333',
                        color: '#ffffff',
                    }).then(() => {
                        location.reload();
                    })
                } else {
                    Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message,
                    timer: 2000,
                    timerProgressBar: true,
                    showConfirmButton: false,
                    background: '#333',
                    color: '#ffffff',
                    });
                }
                } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Something went wrong. Please try again.',
                    timer: 2000,
                    timerProgressBar: true,
                    showConfirmButton: false,
                    background: '#333',
                    color: '#ffffff',
                });
                }
            };

            likeButtons.forEach(button => {
                button.addEventListener('click', () => {
                const reviewId = button.getAttribute('data-review-id');
                handleReviewAction(reviewId, 'like');
                });
            });

            dislikeButtons.forEach(button => {
                button.addEventListener('click', () => {
                const reviewId = button.getAttribute('data-review-id');
                handleReviewAction(reviewId, 'dislike');
                });
            });
            });

        </script>

