                    <% if(productData != ""){ %>
                        <input type="hidden" value="<%= productData._id %>" id="reviewProductId">
                        <input type="hidden" value="<%= productDelivered %>" id="productDelivered">
                    <% } %>
                    <h5 class="section-title my-2 mx-3 fw-bold">Add your review</h5>
                    <div class="d-flex justify-content-between mb-4 align-items-start border rounded m-3 p-3" style="background-color: rgb(243, 243, 243);">
                        <div class="profile-image col-2 col-lg-1 d-flex justify-content-center mb-3 mb-md-0">
                            <% if(userDetails){ %>
                                <% if(userDetails.userProfile !== ""){ %>
                                    <img src="/static/images/UserProfile/<%= userDetails.userProfile %>" class="rounded-circle" alt="User Profile" style="width: 50px; height: 50px; object-fit: cover;">
                                <% }else{ %>
                                    <img src="/static/images/icons/No profile image.jpg" class="rounded-circle" alt="User Profile" style="width: 50px; height: 50px; object-fit: cover;">
                                <% } %>
                            <% }else{ %>
                                <img src="/static/images/icons/No profile image.jpg" class="rounded-circle" alt="User Profile" style="width: 50px; height: 50px; object-fit: cover;">
                            <% } %>
                        </div>
                        <div class="mx-3 col-9 col-lg-10">
                            <% if(userDetails){ %>
                                <label for="userName" class="mx-2 fw-bold"><%= userDetails.userName %></label>
                            <% }else{ %>
                                <label for="userName" class="mx-2 fw-bold">User name</label>
                            <% } %>
                            <textarea class="form-control mb-3" rows="3" placeholder="Write your review..." id="reviewText"></textarea>
                            
                            <div class="mb-3">
                                <label for="rating" class="form-label">Rating</label>
                                <select class="form-select" id="rating">
                                    <option value="1">1 Star</option>
                                    <option value="2">2 Stars</option>
                                    <option value="3">3 Stars</option>
                                    <option value="4">4 Stars</option>
                                    <option value="5">5 Stars</option>
                                </select>
                            </div>
                    
                            <button class="btn btn-primary btn-sm" type="button" id="submitReview" onclick="submitReview()">Submit Review</button>
                        </div>
                    </div>
                    
                </div>

                <div class="col-md-6">
                    <!-- reviews -->
                    <h5 class="section-title my-2 mx-3 fw-bold">Top reviews</h5>
