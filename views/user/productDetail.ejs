                                            <button class="btn btn-outline-success btn-sm me-2 btn-like" type="button" data-review-id="<%= review._id %>">
                                                <i class="fas fa-thumbs-up"></i> Useful <% if (review.likes > 0) { %> <%= review.likes %> <% } %>
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm btn-dislike" type="button" data-review-id="<%= review._id %>">
                                                <i class="fas fa-thumbs-down"></i> Dislike <% if (review.dislikes > 0) { %> <%= review.dislikes %> <% } %>
