                        <div class="col-md-4 mb-3">
                          <h6>Phone</h6>
                          <p class="text-muted"><%= userData.phone %></p>
                        </div>
                        <div class="col-md-4 mb-3 my-md-auto">
                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#informationModal"><i class="fas fa-edit"></i> Edit</button>
                        </div>
                      </div>
