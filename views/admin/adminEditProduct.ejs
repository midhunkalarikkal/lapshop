<head>
    <!-- Css for the admin data edit form -->
    <link rel="stylesheet" href='/static/css/admin_dataEdit.css' type="text/css">
    <style>
        .thumbnail {
    position: relative;
}

.close-btn {
    position: absolute;
    top: 5px;
    right: 7px;
    transform: translate(50%, -50%);
    padding: 0;
    background: transparent;
    border: none;
    cursor: pointer;
    font-size: 20px;
    color: #fff;
    z-index: 1; 
}

.close-btn:hover {
    color: red; 
}

.close-btn-background {
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(50%, -50%);
    width: 30px; /* Adjust as needed */
    height: 30px; /* Adjust as needed */
    background-color: rgba(255, 255, 255, 0.5); /* White with 50% opacity */
    z-index: 0; /* Ensure it's behind the button */
}

  
    </style>
</head>

<body>
    <section class="view">
        <div class="container d-flex align-items-center justify-content-center">
            <div class="main col-12 col-lg-10 m-3 mt-5">
                <form action="/admin/updateProduct/<%= product._id %>" method="POST" enctype="multipart/form-data">
                    <div class="p-5">
                        <h4 class=" fs-3 mb-4" style="color: #0f1923;">Edit product [<%= product._id %>]</h4>
                        <div class="input-box d-md-flex">
                            <div class="col-12 col-md-6">
                                <div class="mb-3 col-md-10">
                                    <label for="productName" class="form-label">Product name</label>
                                    <input type="text" class="form-control" name="productName" id="productName" value="<%= product.name %>" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productBrand" class="form-label">Product brand</label>
                                    <input type="text" class="form-control" name="productBrand" id="productBrand" value="<%= product.brand %>" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productColour" class="form-label">Product colour</label>
                                    <input type="text" class="form-control" name="productColour" id="productColour" value="<%= product.colour %>" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productStock" class="form-label">Product Stock</label>
                                    <input type="number" class="form-control" name="productStock" id="productStock" value="<%= product.noOfStock %>" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productRealPrice" class="form-label">Product real price</label>
                                    <input type="number" class="form-control" name="productRealPrice" id="productRealPrice" value="<%= product.realPrice %>" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productfferPrice" class="form-label">Product offer price</label>
                                    <input type="number" class="form-control" name="productOfferPrice" id="productOfferPrice" value="<%= product.offerPrice %>" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productDiscountPercentage" class="form-label">Product discount percentage</label>
                                    <input type="number" class="form-control" name="productDiscountPercentage" id="productDiscountPercentage" value="<%= product.discountPercentage %>" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productCategory" class="form-label">Product category</label>
                                    <select class="form-select" name="productCategory" id="productCategory" required>    
                                        <% categories.forEach(category => { %>
                                            <option value="<%= category._id %>" <%= category._id.toString() === product.category.toString() ? 'selected' : "" %>>
                                                <%= category.name %>
                                            </option>
                                           <% }) %> 
                                    </select>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productDescription" class="form-label">Product description</label>
                                    <textarea class="form-control" name="productDescription" id="productDescription" rows="3"  required><%= product.description %></textarea>
                                </div>
                                <div class="mt-5 d-md-block d-none">
                                    <button type="" class="btn btn-warning" onclick="goBack(event)">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        
                            <div class="col-12 col-md-6">
                                <div class="mb-3 col-md-10">
                                    <label for="productImageOne" class="form-label">Product image 1</label>
                                    <input type="file" class="form-control" name="productImages" id="productImageOne" accept="image/" multiple="false"  onchange="displayImage(this , 'image1')" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productImagetwo" class="form-label">Product image 2</label>
                                    <input type="file" class="form-control" name="productImages" id="productImageTwo" accept="image/" multiple="false" onchange="displayImage(this , 'image2')" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productImageThree" class="form-label">Product image 3</label>
                                    <input type="file" class="form-control" name="productImages" id="productImageThree" accept="image/" multiple="false" onchange="displayImage(this , 'image3')" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productImageFour" class="form-label">Product image 4</label>
                                    <input type="file" class="form-control" name="productImages" id="productImageFour" accept="image/" multiple="false"  onchange="displayImage(this , 'image4')" required>
                                </div>
                                <div class="mb-3 col-md-10">
                                    <label for="productImageFive" class="form-label">Product image 5</label>
                                    <input type="file" class="form-control" name="productImages" id="productImageFive" accept="image/" multiple="false" onchange="displayImage(this , 'image5')" required>
                                </div>
                                <!-- Image start -->
                                
                                <div class="mb-3  col-md-10">
                                    <h5>Image previews</h5>
                                    <div class="row">
                                        <% for (let i = 0; i < 3; i++) { %>
                                            <div class="col-4">
                                                <div class="thumbnail">
                                                    <!-- Close button -->
                                                    <button class="close-btn" onclick="deleteImage('image<%= i + 1 %>','<%= product._id %>','<%= product.images[i]%>',event)">&times;</button>
                                                    <!-- Background square for the button -->
                                                    <div class="close-btn-background"></div>
                                                    <img class="img-fluid" id="image<%= i + 1 %>" src="/static/images/ProductImages/<%= product.images[i] %>" alt="">
                                                    <div class="caption">
                                                        <h6 id="image<%= i + 1 %>Title">Image <%= i + 1 %></h6>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <div class="row">
                                        <% for (let i = 3; i < 5; i++) { %>
                                            <div class="col-4">
                                                <div class="thumbnail">
                                                    <!-- Close button -->
                                                    <button class="close-btn" onclick="deleteImage('image<%= i + 1 %>','<%= product._id %>','<%= product.images[i]%>',event)">&times;</button>
                                                    <!-- Background square for the button -->
                                                    <div class="close-btn-background"></div>
                                                    <img class="img-fluid" id="image<%= i + 1 %>" src="/static/images/ProductImages/<%= product.images[i] %>" alt="">
                                                    <div class="caption">
                                                        <h6 id="image<%= i + 1 %>Title">Image <%= i + 1 %></h6>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>

                                </div> 
                            </div>
                            
                                <!-- Image end -->
                                
                            </div>
                            <div class="mt-4 d-block d-md-none">
                                <button type="" class="btn btn-warning" onclick="goBack(event)">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </form>
                    </div>
                
            </div>  
        </div>
    </section>
    

    <!-- Script for the viewing of selected image -->
    <script>
        // To display the selected image in the preview
       
        function displayImage(input , targetId){
            const file = input.files[0]

            if(file){
                const reader = new FileReader()

                reader.onload = function(e){
                    const image = document.getElementById(targetId)
                    image.src = e.target.result
                }
                reader.readAsDataURL(file)
            }
        }

       //Cancel button goBack function
       function goBack(event) {
        event.preventDefault();
        window.location.href = '/admin/products'
        }

        // For the deletion of the existing images in databse
        function deleteImage(imageId, productId, productImage,event) {
            event.preventDefault();
            fetch('/admin/deleteProductImage', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId : productId, productImage : productImage }),
            })
            .then(response => {
                if (response.ok) {
                    // Image deleted successfully, clear the src attribute
                    document.getElementById(imageId).src = '';
                } else {
                    console.error('Failed to delete image');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }


    </script>

