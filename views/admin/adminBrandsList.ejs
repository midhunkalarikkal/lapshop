<!-- Admin header -->
<%-include("../adminpartials/admin_navbar.ejs")%>
<section class="view">
<div class="container mt-5">
    <!-- Heading and category adding button start -->
    <div class="row">
        <div class="head col-md-10 offset-md-1 d-flex justify-content-between align-items-center">
            <h1>Brands</h1>
            <button type="button" class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal">Add new brand</button>
        </div>
    </div>
    <!-- Heading and category adding button end -->
    <!-- Table row start -->
    <div class="row d-flex flex-row align-items-center justify-content-center mt-4">
        <div class="table-responsive col-md-10">
            <% if(brand !="" ){ %>
                <table class="table text-center table-striped my-4 p-1">
                    <thead>
                        <tr class="table-dark">
                            <th class="text-center text-light">Nos</th>
                            <th class="text-center text-light">Image</th>
                            <th class="text-center text-light">Name</th>
                            <th class="text-center text-light">Controls</th>
                            <th class="text-center text-light">Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% brand.forEach((row,index)=> { %>
                        <tr class="align-middle">
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <img src="/static/images/BrandImages/<%= row.image %>" width="50" class="img-thumbnal"/>
                                </td>
                                <td>
                                    <%= row.name %>
                                </td>
                                <td>
                                    <input type="radio" class="category-switch" data-category-id="" id="block_" name="block" value="block" >
                                    <label for="block_" class="text-danger">Block</label>
                                    <input type="radio" class="category-switch" data-category-id="" id="unblock_" name="block" value="unblock" >
                                    <label for="unblock_" class="text-success">Unblock</label>
                                </td>
                                <td>
                                    <a href="#" class="text-success edit-category"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% } ) %>
                    </tbody>
                </table>
                <% } else {%>
                <div class="alert alert-info text-center" role="alert">No brands found in the database.</div>
            <% } %>
        </div>
    </div> 
    <!-- Table row end -->
</div>
</section>       

    <!-- Modal start -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Brand</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="brandName" class="form-label">Brnad Name</label>
                            <input type="text" class="form-control" id="brandName" name="brandName">
                        </div>
                        <div class="mb-3">
                            <label for="brandImg" class="form-label mx-2">Select image</label>
                             <input type="file" name="brandImg" id="brandImg" class="form-control form-control-md">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" id="save" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal end -->

    <!-- Script for category adding, category blocking -->
    <script>
        ////// To add new Brnad through fetch \\\\\
        document.getElementById("save").addEventListener("click", async function () {
            const brandName = document.getElementById("brandName").value;
            const brandImg = document.getElementById("brandImg").files[0];
            console.log(brandName,brandImg)

            const formData = new FormData();
            formData.append('brandName', brandName);
            formData.append('brandImg', brandImg);

            try {
                const response = await fetch("/admin/addBrand", {
                    method: "POST",
                    body: formData
                });

                if (response.ok) {
                    const data = await response.json();
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: data.message
                    }).then(() => {
                        $('#exampleModal').modal('hide');
                    });
                } else if (response.status === 400) {
                    const errorData = await response.json();
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: errorData.error
                    });
                } else {
                    // Handle other error cases
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'An unexpected error occurred. Please try again.'
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Network error. Please try again.'
                });
            }
        });

        

        //Script for the data table
        $(document).ready(function(){
            $("table").DataTable({
                order : [0, 'desc']
            })
        })
        
     </script>

<!-- Admin footer -->
 <%-include("../adminpartials/admin_footer.ejs")%>